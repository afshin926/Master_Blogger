@page "{id:long}"
@model MB.Peresentation.MVCcore.Areas.Administrator.Pages.ArticleCategoryMangement.EditModel
@{
}
<div class="card">
    <div class="card-header">
        <h3>Edit Article category : @Model.ArticleCategory.Title </h3>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ArticleCategory.Id"/>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="ArticleCategory.Title" class="custom-control-label">Category Name :</label>
                            <input asp-for="ArticleCategory.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>